{%- style -%}
  .zencial-{{ section.id }} {
    --z-pink: {{ section.settings.color_accent | default: '#ec4899' }};
    --z-purple: #7c3aed;
    --z-acid: #bef264;
    --z-dark: #1c1917;
    background-color: {{ section.settings.bg_color }};
    font-family: 'Inter', sans-serif;
    color: var(--z-dark);
    overflow-x: hidden;
  }

  .z-gradient-text {
    background: linear-gradient(90deg, var(--z-pink), var(--z-purple), #4f46e5);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .z-marquee-wrapper {
    background: #000;
    padding: 12px 0;
    overflow: hidden;
    position: relative;
    z-index: 50;
  }

  .z-marquee-anim {
    display: flex;
    white-space: nowrap;
    animation: z-marquee-scroll 30s linear infinite;
  }

  @keyframes z-marquee-scroll {
    0% { transform: translateX(0%); }
    100% { transform: translateX(-50%); }
  }

  .z-btn-primary {
    background: var(--z-dark);
    color: #fff;
    padding: 18px 40px;
    border-radius: 16px;
    font-weight: 900;
    font-size: 1.125rem;
    display: inline-flex;
    align-items: center;
    gap: 10px;
    transition: all 0.3s ease;
  }

  .z-btn-primary:hover {
    background: var(--z-pink);
    transform: translateY(-2px);
    box-shadow: 0 10px 25px -5px rgba(0,0,0,0.1);
  }

  .z-hero-card {
    border-radius: 40px;
    border: 4px solid #fff;
    box-shadow: 0 20px 40px -10px rgba(0,0,0,0.15);
  }

  .z-badge-gmv {
    background: var(--z-acid);
    color: #000;
    padding: 12px 24px;
    border-radius: 99px;
    font-weight: 900;
    border: 3px solid #000;
    box-shadow: 6px 6px 0px 0px #000;
    position: absolute;
    bottom: -15px;
    right: -10px;
    transform: rotate(8deg);
  }
{%- endstyle -%}

<!-- External Dependencies -->
