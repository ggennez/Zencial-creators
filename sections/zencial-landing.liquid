      trigger.addEventListener('click', () => {
        const item = trigger.closest('.z-faq-item');
        const isActive = item.classList.contains('active');
        document.querySelectorAll('.z-faq-item').forEach(i => i.classList.remove('active'));
        if(!isActive) item.classList.add('active');
        trigger.querySelector('svg').style.transform = item.classList.contains('active') ? 'rotate(180deg)' : 'rotate(0deg)';
