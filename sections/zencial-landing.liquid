    vBtn.addEventListener('click', () => {
      const user = vInput.value.trim();
      if(!user) return;
      vIdle.classList.add('hidden-state');
      vLoading.classList.remove('hidden-state');
      setTimeout(() => {
        document.getElementById('v-avatar').src = `https://ui-avatars.com/api/?name=${user}&background=bef264&color=1c1917&size=128&bold=true`;
