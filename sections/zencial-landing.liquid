    font-family: 'Inter', sans-serif;
    color: var(--z-dark);
    line-height: 1.5;
  }

  /* Marquee Animation */
  @keyframes z-marquee { 0% { transform: translateX(0%); } 100% { transform: translateX(-50%); } }
  .z-marquee-anim { display: flex; white-space: nowrap; animation: z-marquee 30s linear infinite; }

  /* Plaque Sticky Stack - Fix */
  .z-plaque-stack-container {
    position: relative;
    padding-bottom: 2rem;
  }
  .z-plaque-item {
    position: sticky;
    top: 12vh;
    margin-bottom: 60vh;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    z-index: 10;
  }
  .z-plaque-item:last-child { margin-bottom: 15vh; }

  /* Glassmorphism */
  .z-glass {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* FAQ Accordion */
  .z-faq-content { max-height: 0; opacity: 0; overflow: hidden; transition: all 0.5s ease; }
  .z-faq-item.active .z-faq-content { max-height: 800px; opacity: 1; padding-bottom: 2rem; }

  .z-gradient-text {
    background: linear-gradient(90deg, var(--z-pink), var(--z-purple), #4f46e5);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Animations */
  @keyframes z-float { 0%, 100% { transform: translateY(0) rotate(6deg); } 50% { transform: translateY(-15px) rotate(8deg); } }
  .z-animate-float { animation: z-float 4s ease-in-out infinite; }
  
  @keyframes z-shimmer { from { background-position: 0 0; } to { background-position: -200% 0; } }
  .z-btn-shimmer {
    background: linear-gradient(110deg, var(--z-dark), 45%, #333, 55%, var(--z-dark));
    background-size: 200% 100%;
    animation: z-shimmer 2s linear infinite;
  }

  .hidden-state { display: none !important; }

  /* Custom Scrollbar */
  .z-landing-{{ section.id }}::-webkit-scrollbar { width: 6px; }
  .z-landing-{{ section.id }}::-webkit-scrollbar-thumb { background: var(--z-pink); border-radius: 10px; }
{%- endstyle -%}

